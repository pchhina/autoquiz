#!/usr/local/bin/Rint
library(quizme)
cat('syncing with network database...\n')
system('rclone sync gcloud:quizme ~/.quizme')
cat('done\n')
cat('reading local database...\n')
quizme()
cat('done\n')
cat('use rq to repeat question if needed\n')
cat("Let's go!\n")
input <- 'z' # dummy input to force into while loop
while (input != 'b') {
    if (input == 'h' | input == 'm' | input == 'z') {
    cat('\n')
    ask()
    }
    cat('\n')
    input <- readline(prompt = '(h)it (m)iss (t)ell (b)ye (a)dd (c)hange (s)tatus: ')
    cat('\n')
    input <- as.character(input)
    switch(input,
           h = hit(),
           m = miss(),
           t = tell(),
           a = addq(),
           c = changeq(),
           s = show_status(),
           rq = ask())
    }
cat('updating local database...\n')
bye()
cat('done\n')
cat('updating network database...\n')
system('rclone sync ~/.quizme gcloud:quizme')
cat('done\n')
q()
